<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_navbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <!-- 홈 -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_non"  />

        <TextView
            android:id="@+id/nav_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈"
            android:textColor="#FFCCECE3"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 알림 -->
    <LinearLayout
        android:id="@+id/nav_notification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification_non"  />

        <TextView
            android:id="@+id/nav_notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림"
            android:textColor="#FFCCECE3"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 매칭 -->
    <LinearLayout
        android:id="@+id/nav_matching"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_matching_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_matching_non" />
    </LinearLayout>

    <!-- 마이 -->
    <LinearLayout
        android:id="@+id/nav_myprofile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_myprofile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile_non" />

        <TextView
            android:id="@+id/nav_myprofile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이"
            android:textColor="#FFCCECE3"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 설정 -->
    <LinearLayout
        android:id="@+id/nav_settings"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_non"  />

        <TextView
            android:id="@+id/nav_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textColor="#FFCCECE3"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>