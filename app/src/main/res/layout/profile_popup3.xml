<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- ✅ 확인 팝업 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- 프로필 아이콘 -->
            <ImageView
                android:id="@+id/img_profile_confirm"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="프로필" />

            <!-- 이름 -->
            <TextView
                android:id="@+id/tv_name_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="최북악"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- 메시지 -->
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="정말 거절할 건가요? ㅜㅜ"
                android:textSize="14sp"
                android:textColor="#6BDBB4"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_sub_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="김국민 님께 더 좋은 매칭이 이뤄질 수 있게 캐칭이 더 \n노력할게요!"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center" />

            <!-- 확인 버튼 -->
            <!-- 버튼 2개 가로 배치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <!-- ❌ 거절 버튼 -->
                <FrameLayout
                    android:id="@+id/btn_reject_layout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/btn_reject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_decline"
                        android:contentDescription="거절" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="거절하기"
                        android:textColor="#F44336"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- ✅ 수락 버튼 -->
                <FrameLayout
                    android:id="@+id/btn_delete_layout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/img_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_delete"
                        android:contentDescription="취소" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="취소하기"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>



            </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>